<%- include('partials/header.ejs') %>
<body>
	<%- include('partials/navbar.ejs') %>
	<div class="container mt-5">
		<div class="card">
			<div class="card-header" id="card-perguntar">
				<h3>Perguntar:</h3>
			</div>
			<div class="card-body">
				<form action="/salvarpergunta" method="post">
					<div class="form-group">
						<label for="titulo">Título: </label>
						<input
							type="text"
							name="titulo"
							placeholder="Título"
							class="form-control"
							required
							autofocus
						/>
					</div>
					<div class="form-group">
						<label for="pergunta">Descrição: </label>
						<textarea
							rows="2"
							cols=""
							placeholder="Descreva sua pergunta aqui"
							class="form-control"
							style="resize: none"
							name="descricao"
							required
						></textarea>
					</div>
					<button type="submit" class="btn btn-primary">Perguntar</button>
				</form>
			</div>
		</div>
	</div>
</body>
<%- include('partials/footer.ejs') %>
